# Development Environment Configuration

# Server Settings
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000/api
CLIENT_URL=http://localhost:8080

# Database Settings
DATABASE_URL=postgresql://postgres:dev_password@localhost:5432/renexus_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=renexus_dev
DB_USER=postgres
DB_PASSWORD=dev_password
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_DEBUG=true

# Authentication
JWT_SECRET=dev_jwt_secret_change_in_production
JWT_EXPIRY=1d
REFRESH_TOKEN_SECRET=dev_refresh_token_secret
REFRESH_TOKEN_EXPIRY=7d

# Logging
LOG_LEVEL=debug
LOG_OUTPUT=console

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Feature Flags
FEATURE_REALTIME_COLLABORATION=true
FEATURE_AI_SUGGESTIONS=true
FEATURE_ANALYTICS_DASHBOARD=true

# External APIs
AI_API_KEY=dev_api_key
AI_MODEL=gpt-3.5-turbo

# Performance
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100
CACHE_TTL=60

{
  "name": "renexus",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:api": "turbo run build --filter=api",
    "build:web": "turbo run build --filter=web-client",
    "start": "node dist/server.js",
    "start:dev": "ts-node-dev --respawn server.ts",
    "migration:generate": "ts-node database/migrations/migration.ts generate",
    "migration:run": "ts-node database/migrations/migration.ts migrate",
    "migration:data": "ts-node database/migrations/migration.ts data",
    "migration:validate": "ts-node database/migrations/migration.ts validate",
    "migration:full": "ts-node database/migrations/migration.ts full",
    "test": "turbo run test",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "playwright test",
    "test:security": "ts-node tests/security/security-audit.ts",
    "lint": "turbo run lint",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "docker:build": "docker-compose -f deployment/docker-compose.prod.yml build",
    "docker:up": "docker-compose -f deployment/docker-compose.prod.yml up -d",
    "docker:down": "docker-compose -f deployment/docker-compose.prod.yml down"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/terminus": "^10.3.0",
    "bcrypt": "^5.1.1",
    "cache-manager": "^5.2.3",
    "cache-manager-redis-store": "^3.0.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.1",
    "drizzle-zod": "^0.5.1",
    "express": "^4.18.2",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "prom-client": "^14.2.0",
    "uuid": "^9.0.1",
    "xss-clean": "^0.1.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.7.3",
    "@nestjs/testing": "^10.0.0",
    "@playwright/test": "^1.38.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cache-manager": "^4.0.2",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.4.5",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "drizzle-kit": "^0.31.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "jest": "^29.7.0",
    "k6": "^0.0.0",
    "morgan": "^1.10.0",
    "prettier": "^3.0.3",
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "turbo": "^1.10.12",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@10.2.0"
}

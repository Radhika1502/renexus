{
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*",
        "packages/shared/*"
    ],
    "name": "renexus",
    "version": "1.0.0",
    "type": "module",
    "description": "Project management system",
    "packageManager": "npm@10.0.0",
    "scripts": {
        "clean": "turbo run clean",
        "build": "tsc",
        "dev": "ts-node-dev --respawn src/index.ts",
        "lint": "turbo run lint",
        "test": "jest --config jest.config.js",
        "test:unit": "jest --config jest.config.js tests/unit/",
        "test:integration": "jest --config jest.config.js tests/integration/",
        "test:watch": "jest --config jest.config.js --watch",
        "test:coverage": "jest --config jest.config.js --coverage",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:debug": "playwright test --debug",
        "test:e2e:report": "playwright show-report",
        "test:perf": "jest --config jest.perf.config.js",
        "test:ci": "jest --config jest.config.js --ci --coverage --maxWorkers=2",
        "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:perf",
        "coverage": "node scripts/coverage.js",
        "migrate": "ts-node backend/database/migrate.ts",
        "seed": "ts-node backend/database/seeds/initial_auth_data.ts",
        "start": "node dist/index.js"
    },
    "devDependencies": {
        "@axe-core/playwright": "^4.8.1",
        "@babel/core": "^7.24.0",
        "@babel/preset-env": "^7.24.0",
        "@babel/preset-typescript": "^7.23.3",
        "@playwright/test": "^1.40.0",
        "@testing-library/jest-dom": "^6.4.2",
        "@testing-library/react": "^14.2.1",
        "@testing-library/user-event": "^14.5.2",
        "@types/bcrypt": "^5.0.2",
        "@types/jest": "^29.5.12",
        "@types/morgan": "^1.9.10",
        "@types/node": "^20.11.24",
        "@types/pg": "^8.11.2",
        "@types/react": "^18.2.61",
        "@types/react-dom": "^18.2.19",
        "@types/winston": "^2.4.4",
        "autocannon": "^7.0.0",
        "babel-jest": "^29.7.0",
        "babel-plugin-module-resolver": "^5.0.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "express-rate-limit": "^7.1.5",
        "helmet": "^7.1.0",
        "jest": "^29.7.0",
        "k6": "^0.0.0",
        "morgan": "^1.10.0",
        "prisma": "^4.0.0",
        "supertest": "^6.3.4",
        "ts-jest": "^29.1.2",
        "turbo": "^2.5.4",
        "typescript": "^5.3.3",
        "@types/speakeasy": "^2.0.9",
        "@types/qrcode": "^1.5.5",
        "@types/supertest": "^6.0.2",
        "@types/k6": "^0.48.0",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "dependencies": {
        "@prisma/client": "^4.0.0",
        "@types/bcrypt": "^5.0.2",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/uuid": "^10.0.0",
        "bcrypt": "^6.0.0",
        "drizzle-orm": "^0.29.3",
        "express": "^4.17.1",
        "jsonwebtoken": "^9.0.2",
        "pg": "^8.11.3",
        "qrcode": "^1.5.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-query": "^3.34.0",
        "speakeasy": "^2.0.0",
        "uuid": "^11.1.0",
        "winston": "^3.17.0",
        "zod": "^3.0.0"
    }
}

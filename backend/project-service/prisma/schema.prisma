generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id          String    @id @default(uuid())
  name        String
  description String?
  status      String    @default("active")
  tenantId    String
  createdById String
  teamId      String?
  startDate   DateTime?
  endDate     DateTime?
  members     String[]  @default([])
  templateId  String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([status])
}

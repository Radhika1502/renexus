# Production Environment Configuration

# Server Settings
NODE_ENV=production
PORT=3000
API_BASE_URL=https://api.renexus.io/api
CLIENT_URL=https://renexus.io

# Database Settings
DATABASE_URL=postgresql://renexus_app:CHANGE_THIS_PASSWORD@db.renexus.io:5432/renexus_prod
DB_HOST=db.renexus.io
DB_PORT=5432
DB_NAME=renexus_prod
DB_USER=renexus_app
DB_PASSWORD=CHANGE_THIS_PASSWORD
DB_POOL_MIN=10
DB_POOL_MAX=50
DB_DEBUG=false

# Authentication
JWT_SECRET=CHANGE_THIS_SECRET
JWT_EXPIRY=1d
REFRESH_TOKEN_SECRET=CHANGE_THIS_SECRET
REFRESH_TOKEN_EXPIRY=7d

# Logging
LOG_LEVEL=warn
LOG_OUTPUT=file

# Redis Cache
REDIS_HOST=redis.renexus.io
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_PASSWORD
REDIS_DB=0

# Feature Flags
FEATURE_REALTIME_COLLABORATION=true
FEATURE_AI_SUGGESTIONS=true
FEATURE_ANALYTICS_DASHBOARD=true

# External APIs
AI_API_KEY=CHANGE_THIS_API_KEY
AI_MODEL=gpt-4

# Performance
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100
CACHE_TTL=600
